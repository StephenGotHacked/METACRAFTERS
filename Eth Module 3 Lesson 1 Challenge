        pragma solidity ^0.8.18;

        contract Ch1Metacrafters {

            uint myAge;
            string myFullName;
            bool testing = true;
            address myCrypto;

        function setMetacrafters(uint Age, string memory myFirstName, string memory myLastName, address _myCrypto )public{
                myAge = Age;
                myFullName = myFirstName; myLastName;
                myCrypto = _myCrypto;
        }

        function getAge() public view returns (uint) {
                 return myAge;
        }

        function getFullName() public view returns (string memory) {
                 return myFullName ;
        }

        function getTest() public view returns (bool) {
                 return testing;
        }

        function getAddress() public view returns (address){
                 return myCrypto;
        }

}        
